<div class="row">
        <div class="col-5 offset-4">
            <h1>Edit Profile</h1>
            <form action="/users/<%= @current_user.id %>" method="post">
                <input type="hidden" name="_method" value="patch">
                <div class="form-group">
                    <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token =%>'>
                    <label for="user[name]">Name</label>
                    <input type="text" class="form-control" name="user[name]" id="name" value="<%= @current_user.name %>">
                </div> 
                <div class="form-group">
                    <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token =%>'>
                    <label for="user[email]">Email</label>
                    <input type="text" class="form-control" name="user[email]" id="email" value="<%= @current_user.email %>">
                </div> 
                <button type="submit" class="btn btn-primary" id="update">Update</button>
            </form>
            <a name="delete" id="delete" data-method="delete" class="link" href="/users/<%= @current_user.id %>">Delete Account</a>
        </div>
    </div>