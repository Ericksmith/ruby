<h1>New Student</h1>

<% if flash[:message] %>
  <% flash[:message].each do | m |%>
  <p><%= m %></p>
  <%end%>
<%end%>
<form action="/dojos/<%= @current_dojo.id %>/students" method="post">
  <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token =%>'>
  <p>First Name: <input type="text" name="student[first_name]" id=""></p>
  <p>Last Name: <input type="text" name="student[last_name]" id=""></p>
  <p>Email: <input type="text" name="student[email]" id=""></p>
  <p>Dojo: <select name="student[dojo_id]" id="">
    <% if @dojos %>
      <% @dojos.each do |d|%>
        <%if d.id == @current_dojo.id %>
          <option value="<%= d.id %>" selected="selected"><%= d.branch %></option> 
        <% else %> 
          <option value="<%= d.id %>"><%= d.branch %></option>  
        <%end%>
      <%end%>  
    <%end%>  
  </select></p>
  <input type="submit" value="Create">
</form>

<a href="/dojos">Home </a> | <a href="/dojos/<% @current_dojo.id %>"><%= @current_dojo.branch %></a>