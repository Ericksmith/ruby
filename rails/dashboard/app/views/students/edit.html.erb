<h1>Editing </h1>

<form action="/dojos/<%= @student.dojo_id %>/students/<%= @student.id %>/edit" method="post">
  <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token =%>'>
  <p>First Name: <input type="text" name="student[first_name]" value="<%= @student.first_name%>"></p>
  <p>Last Name: <input type="text" name="student[last_name]" value="<%= @student.last_name%>"></p>
  <p>Email: <input type="text" name="student[email]" value="<%= @student.email%>"></p>
  <p>Dojo: <select name="student[dojo_id]" id="">
  <p><% if @dojos %>
    <% @dojos.each do |d|%>
      <%if d.id == @student.dojo_id %>
        <option value="<%= d.id %>" selected="selected"><%= d.branch %></option> 
      <% else %> 
        <option value="<%= d.id %>"><%= d.branch %></option>  
      <%end%>
    <%end%>  
  <%end%>  
</select></p>
<input type="submit" value="Update">
</form>