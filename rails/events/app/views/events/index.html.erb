<h1>Welcome, <%= @current_user.first_name %></h1>


<p>Where are some of the events at your state: </p>

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Location</th>
                <th>Host</th>
                <th>Action/Status</th>
            </tr>
        </thead>
        <% if @local_events %>
            <tbody>
                <% @local_events.each do |event| %>
                    <tr>
                        <td scope="row"><%= event.name %></td>
                        <td><%= event.date %></td>
                        <td><%= event.city %></td>
                        <td><%= event.user.first_name%></td>
                        <td></td>
                    </tr>
                <% end %>
            </tbody>
        <% end %>
    </table>
</div>

<p>Here are some events in other states: </p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Location</th>
            <th>State</th>
            <th>Host</th>
            <th>Action/Status</th>
        </tr>
    </thead>
    <% if @out_of_state_events%>
    <tbody>
        <% @out_of_state_events.each do |event| %>
        <tr>
            <td scope="row"><%= event.name %></td>
            <td><%= event.date %></td>
            <td><%= event.city%></td>
            <td><%= event.state %></td>
            <td><%= event.user.first_name%></td>
        </tr>
        <%end%>
    </tbody>
    <%end%>
</table>

<form action="/events" method="post">
    <div class="form-group">
      <label for="event[name]">Name</label>
      <input type="text" class="form-control" name="event[name]" id="event[name]" placeholder="">
    </div>
    <div class="form-group">
        <input type="date" name="event[date]" id="date">
    </div>
    
</form>