<h1>Welcome, <%= @current_user.first_name %></h1>


<p>Where are some of the events in your state: </p>

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Location</th>
                <th>Host</th>
                <th>Action/Status</th>
            </tr>
        </thead>
        <% if @local_events %>
            <tbody>
                <% @local_events.each do |event| %>
                    <tr>
                        <td scope="row"> <a href="/events/<%= event.id %>"> <%= event.name %> </a></td>
                        <td><%= event.date.strftime("%B %d %Y") %></td>
                        <td><%= event.city %></td>
                        <td><%= event.user.first_name%></td>
                        <td>
                            <% if event.users %>
                                <% event.users.any? do |user|%>
                                    <% if user.id == @current_user.id %>
                                    <a name="leave" id="" class="btn btn-warning" data-method="delete" href="/attendees/<% event.id %> " role="button">Leave Event</a>
                                    <%else%>
                                        <a href="/attendees/<% event.id %>" class="btn btn-success" data-method="post" role="button">Join</a>    
                                    <%end%>
                                <%end%>
                            <%end%>
                            <form action="/attendees" method="post">
                                <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token =%>'>
                                <button type="submit" class="btn btn-success">Join</button>    
                                <input type="hidden" name="event_id" value="<%= event.id %>">
                            </form>
                            <% if event.user_id == @current_user.id %>
                                <a href="/events/<%= event.id %>" class="btn btn-danger" data-method="delete" role="button">Delete</a>
                            <%end%>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        <% end %>
    </table>
</div>

<p>Here are some events in other states: </p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Location</th>
            <th>State</th>
            <th>Host</th>
            <th>Action/Status</th>
        </tr>
    </thead>
    <% if @out_of_state_events%>
    <tbody>
        <% @out_of_state_events.each do |event| %>
        <tr>
            <td scope="row"> <a href="/events/<%= event.id %>"> <%= event.name %> </a></td>
            <td><%= event.date.strftime("%B %d %Y") %></td>
            <td><%= event.city%></td>
            <td><%= event.state %></td>
            <td><%= event.user.first_name%></td>
            <td>
                <% if event.users %>
                    <% event.users.any? do |user| %>
                        <% if user.id == @current_user.id %>
                            <a name="leave" id="" class="btn btn-warning" data-method="delete" href="/attendees/<% event.id %> " role="button">Leave Event</a>
                        <%else%>
                        <%end%>
                        <%end%>
                        <%end%>
                        <form action="/attendees" method="post">
                            <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token =%>'>
                            <button type="submit" class="btn btn-success">Join</button>    
                            <input type="hidden" name="event_id" value="<%= event.id %>">
                        </form>
                <% if event.user_id == @current_user.id %>
                    <a href="/events/<%= event.id %>" class="btn btn-danger" data-method="delete" role="button">Delete</a>
                <%end%>
            </td>
        </tr>
        <%end%>
    </tbody>
    <%end%>
</table>

<div class="row"></div>
<h3>Add Event</h3>
    <div class="col-5">
        <form action="/events" method="post">
            <% if flash[:event_errors] %>
                <% flash[:event_errors].each do |error| %>
                    <p class="text-danger"><%= error %></p>
                <%end%>
            <%end%>
            <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token =%>'>
            <div class="form-group">
            <label for="event[name]">Name</label>
            <input type="text" class="form-control" name="event[name]" id="event[name]" placeholder="">
            </div>
            <div class="form-group">
                <input type="date" name="event[date]" id="date">
            </div>
            <div class="form-group">
              <label for="event[city]">Location</label>
              <input type="text" class="form-control" name="event[city]" id="event[city]" placeholder="">
            </div>
            <div class="form-group">
                <label for="event[state]">State: </label>
                <select class="input-small" name="event[state]" id="">
                    <% @states.each do |state|%>
                        <option value="<%= state %>"><%= state %></option>
                    <%end%>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Add Event</button>
        </form>
    </div>
</div>